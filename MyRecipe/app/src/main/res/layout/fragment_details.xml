<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/desc_movie_poster"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_poster"
            android:layout_marginTop="3dp"
            android:background="@drawable/border"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_subcategory"
            android:layout_marginTop="6dp"
            android:background="@drawable/border"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_rate"
            android:layout_marginTop="6dp"
            android:background="@drawable/border"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_subcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_category"
            android:layout_marginTop="6dp"
            android:background="@drawable/border"
            android:textColor="#000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_desc"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:text="Favourite"
            android:textSize="10sp" />

        <Button
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/favourite"
            android:layout_alignBottom="@+id/favourite"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/favourite"
            android:layout_toRightOf="@+id/favourite"
            android:background="@drawable/border"
            android:text="Instructions"
            android:textSize="10sp" />

        <Button
            android:id="@+id/ingerdint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/instruction"
            android:layout_toEndOf="@+id/instruction"
            android:layout_toRightOf="@+id/instruction"
            android:background="@drawable/border"
            android:layout_marginLeft="5dp"
            android:text="Ingredient"
            android:textSize="10sp"
            android:layout_alignTop="@+id/instruction" />

        <Button
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ingerdint"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/ingerdint"
            android:background="@drawable/border"
            android:text="Remove Fav" />


    </RelativeLayout>
</FrameLayout>
